%main.new-user-main
  %section.new-user-contents
    %h2.new-user-input
      発送元・お届け先住所入力
     
    = form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-wrap") do |f|
      .contents__main
        .form-content.form-group.margin__top-40px
          
          .form-group
            = f.label :name, "お名前"
            %span.form-require 必須
            = f.email_field :nickname, placeholder: "例)山田", class: "form-group__input"
            = f.email_field :nickname, placeholder: "例)彩", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :name, "お名前カナ"
            %span.form-require 必須
            = f.email_field :nickname, placeholder: "例)ヤマダ", class: "form-group__input"
            = f.email_field :nickname, placeholder: "例)アヤ", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :email, "郵便番号"
            %span.form-require 必須
            = f.email_field :email, placeholder: "PC・携帯どちらでも可", class: "form-group__input"
          
          .form-group.margin__top-32px
            = f.label :password, "都道府県"
            %span.form-require 必須
            = f.password_field :password, placeholder: "アクティブハッシュ", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :password, "市区町村"
            %span.form-require 必須
            = f.password_field :password, placeholder: "例)横浜市緑区", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :password, "番地"
            %span.form-require 必須
            = f.password_field :password, placeholder: "例)青山1-1-1", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :password, "建物名"
            %span.form-require 必須
            = f.password_field :password, placeholder: "例)柳ビル103", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :password, "電話"
            %span.form-require 必須
            = f.password_field :password, placeholder: "例)09012345678", class: "form-group__input"

          = f.submit "次へ進む", class: "next-btn btn square-btn contents__text margin__top-32px margin__bottom-60px"