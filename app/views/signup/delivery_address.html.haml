= render 'layouts/register-header4'
%main.new-user-main
  %section.new-user-contents
    %h2.new-user-input
      発送元・お届け先住所入力

    =form_with(model: @user, local: true, url: card_signup_index_path, method: :get) do |f|
      .contents__main
        .form-content.form-group.margin__top-40px
          .form-group
            = f.label :kanji, "お名前"
            %span.form-require 必須
            = f.text_field :kan_familyname, placeholder: "例)山田", class: "form-group__input", value: "#{session[:kan_familyname]}"
            = f.text_field :kan_firstname, placeholder: "例)彩", class: "form-group__input", value: "#{session[:kan_firstname]}"

          .form-group.margin__top-32px
            = f.label :kana, "お名前カナ"
            %span.form-require 必須
            = f.text_field :kana_familyname, placeholder: "例)ヤマダ", class: "form-group__input", value: "#{session[:kana_familyname]}"
            = f.text_field :kana_firstname, placeholder: "例)アヤ", class: "form-group__input", value: "#{session[:kana_firstname]}"

          .form-group.margin__top-32px
            = f.label :postal_code, "郵便番号"
            %span.form-require 必須
            = f.text_field :postal_code, placeholder: "例)123-4567", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :region, "都道府県"
            %span.form-require 必須
          .position-relative
            .fa.fa-chevron-down.form-icon-position__prefecture
            = f.collection_select(:region, Prefecture.all, :id, :name, {prompt: "--"}, {class: 'form-group__input'})

          .form-group.margin__top-32px
            = f.label :city, "市区町村"
            %span.form-require 必須
            = f.text_field :city, placeholder: "例)横浜市緑区", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :block, "番地"
            %span.form-require 必須
            = f.text_field :block, placeholder: "例)青山1-1-1", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :buildings, "建物名"
            %span.form-require.form-require__optional 任意
            = f.text_field :buildings, placeholder: "例)柳ビル103", class: "form-group__input"

          .form-group.margin__top-32px
            = f.label :address_phone_number, "電話"
            %span.form-require.form-require__optional 任意
            = f.text_field :address_phone_number, placeholder: "例)09012345678", class: "form-group__input"

          = f.submit "次へ進む", class: "next-btn btn square-btn contents__text margin__top-32px margin__bottom-60px"
= render 'layouts/register-footer'